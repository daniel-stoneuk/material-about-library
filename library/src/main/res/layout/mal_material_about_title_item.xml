<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/mal_baseline_half">

    <ImageView
        android:id="@+id/mal_item_image"
        android:layout_width="@dimen/mal_title_item_image_size"
        android:layout_height="@dimen/mal_title_item_image_size"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/mal_baseline_half"
        android:adjustViewBounds="false"
        android:contentDescription="@null"
        android:cropToPadding="false"
        android:scaleType="fitCenter"
        tools:src="@android:drawable/sym_def_app_icon" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:layout_marginHorizontal="@dimen/mal_baseline_half"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mal_item_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            tools:text="App Name" />

        <TextView
            android:id="@+id/mal_item_desc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="-4dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            tools:text="Copyright Me" />

    </LinearLayout>

</LinearLayout>
