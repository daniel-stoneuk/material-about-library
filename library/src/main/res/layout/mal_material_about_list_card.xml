<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mal_list_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/mal_baseline_half"
    android:layout_marginTop="@dimen/mal_baseline_half"
    android:paddingVertical="@dimen/mal_baseline"
    android:paddingHorizontal="@dimen/mal_baseline_half"
    app:strokeWidth="1dp"
    app:strokeColor="@color/mal_stroke_color"
    app:cardElevation="0dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mal_list_card_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/mal_baseline_half"
            android:layout_marginHorizontal="@dimen/mal_baseline"
            android:layout_marginTop="@dimen/mal_baseline"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            tools:text="Author"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mal_card_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="true"
            android:paddingVertical="@dimen/mal_baseline_half"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
